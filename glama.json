{
  "$schema": "https://glama.ai/schema/glama.v1.json",
  "name": "eu-regulations",
  "runtime": {
    "node": "24",
    "buildSteps": [
      "pnpm install --frozen-lockfile",
      "cd node_modules/.pnpm/better-sqlite3@*/node_modules/better-sqlite3 && npm run install",
      "pnpm run build"
    ],
    "cmd": ["node", "dist/http-server.js"],
    "env": {
      "NODE_ENV": "production"
    }
  }
}
