    "url": "https://github.com/Ansvar-Systems/EU_compliance_MCP/issues"
  },
  "homepage": "https://github.com/Ansvar-Systems/EU_compliance_MCP#readme",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "data/seed"
  ],
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.10",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
