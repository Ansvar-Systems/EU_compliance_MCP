{
  "name": "@ansvar/eu-regulations-mcp",
  "version": "0.1.0",
  "description": "The first open-source MCP server for European cybersecurity regulations. Query DORA, NIS2, GDPR, EU AI Act, and more directly from Claude.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "eu-regulations-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev": "tsx src/index.ts",
    "build:db": "tsx scripts/build-db.ts",
    "ingest": "tsx scripts/ingest-eurlex.ts",
    "check-updates": "tsx scripts/check-updates.ts",
    "lint": "eslint src --ext .ts",
    "postinstall": "test -f dist/index.js || npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "compliance",
    "gdpr",
    "nis2",
    "dora",
    "ai-act",
    "eu-regulations",
    "cybersecurity",
    "cyber-resilience-act",
    "european-union",
    "legal",
    "regulatory",
    "claude",
    "llm"
  ],
  "author": "Ansvar Systems <hello@ansvar.ai> (https://ansvar.ai)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ansvar-systems/eu-regulations-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/ansvar-systems/eu-regulations-mcp/issues"
  },
  "homepage": "https://ansvar.ai",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "data",
    "scripts",
    "src"
  ],
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.0.10",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "better-sqlite3": "^12.6.2",
    "jsdom": "^27.4.0"
  }
}
